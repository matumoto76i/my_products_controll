.sign__main
  .sign__main__contents
    = form_for(resource, as: resource_name, url: session_path(resource_name)) do |f|
      .sign-form
        %h1 アカウントをお持ちでない方はこちら
        .sign-form__link
          - if devise_mapping.registerable? && controller_name != 'registrations'
            = link_to "新規会員登録", new_registration_path(resource_name)
            %br/
        .sign-form__box
          .require
            %span.require__list メールアドレス
          .input_form
            = f.email_field :email, autofocus: true, class: "form_text", autocomplete: "email"
        .sign-form__box
          .require
            %span.require__list パスワード
          .input_form
            = f.password_field :password, class: "form_text", autocomplete: "current-password"
          %br/
          .actions
            = f.submit "ログイン", class: "submit-btn"
    %br/
    = render "devise/shared/links"
.sign-footer
  = render "posts/footer"