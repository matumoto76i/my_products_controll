.items__header
  = render "header"
.items
  .items_lists__main
    .items_lists__main__list
      .container
        - @items.each do |item|
          - if current_user.id == item.user_id
            .container__box
              = link_to item_path(item.id), method: :get do
                - ft_image = item.images.first
                = image_tag ft_image.image.url, class: "list__image"
                .list__main
                  .list__main__name
                    = item.name
                  .list__main__details
                    %ul
                      %li 
                        = "数量"
                        = item.quantity
                        = "ヶ"
                      %li
                        = "購入店舗"
                        = item.shop
                      %li
                        = "消費期限"
  .items__footer
    = render "/posts/footer"